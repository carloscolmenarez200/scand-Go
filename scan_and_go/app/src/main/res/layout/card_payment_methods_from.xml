<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/cardBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_background_card"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:src="@drawable/img_card" />

        <FrameLayout
            android:layout_width="330dp"
            android:layout_height="192dp"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_marginTop="40dp"
                android:id="@+id/ivDefault"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_check"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/ivType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="20dp"
                android:adjustViewBounds="true"
                android:layout_marginBottom="15dp"
                android:cropToPadding="false"
                app:srcCompat="@drawable/visa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/circular_std_book"
                    android:gravity="center"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="****   ****    ****    1645"
                    android:textAlignment="center"
                    android:textColor="@color/coloIcons"
                    android:textSize="26sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/circular_std_book"
                        android:shadowColor="@android:color/black"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:text="@string/text_valid_thru"
                        android:textColor="@color/coloIcons"
                        android:textSize="7sp" />

                    <TextView
                        android:id="@+id/tvExpireDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/circular_std_book"
                        android:shadowColor="@android:color/black"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:text="01/2101"
                        android:textColor="@color/coloIcons"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvCardHolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/circular_std_book"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="Jhonny Barrios"
                    android:textColor="@color/coloIcons"
                    android:textSize="19sp" />
            </LinearLayout>

        </FrameLayout>

    </FrameLayout>

</layout>