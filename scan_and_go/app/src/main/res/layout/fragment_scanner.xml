<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:sothree="http://schemas.android.com/apk/res-auto">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:gravity="bottom"
        sothree:umanoClipPanel="false"
        sothree:umanoDragView="@+id/dragView"
        sothree:umanoFadeColor="@android:color/transparent"
        sothree:umanoOverlay="true"
        sothree:umanoPanelHeight="40dp"
        sothree:umanoParallaxOffset="0dp"
        sothree:umanoScrollableView="@+id/list"
        sothree:umanoShadowHeight="0dp">

        <!-- MAIN CONTENT -->
        <FrameLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/picker_camera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <RelativeLayout
                android:id="@+id/rl_main_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:keepScreenOn="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <ImageView
                        android:id="@+id/iv_scanner_top_mask"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"
                        android:scaleType="centerCrop"
                        android:src="@drawable/scanner_mask_top" />

                    <ImageView
                        android:id="@+id/iv_scanner_middle_mask"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_below="@+id/iv_scanner_top_mask"
                        android:layout_weight="35"
                        android:scaleType="centerCrop"
                        android:src="@drawable/scanner_mask_middle" />

                    <ImageView
                        android:id="@+id/iv_scanner_bottom_mask"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_below="@+id/iv_scanner_middle_mask"
                        android:layout_weight="65"
                        android:scaleType="centerCrop"
                        android:src="@drawable/scanner_mask_bottom" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/mDummyImgView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:visibility="visible" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_car"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_item_car"
                    android:layout_above="@+id/rl_button"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="@dimen/margin_item_car"
                    android:layout_marginRight="@dimen/margin_item_car"
                    android:clickable="true"
                    android:visibility="gone"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <ImageView
                            android:id="@+id/iv_item_image"
                            android:layout_width="0dp"
                            android:layout_height="75dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="21"
                            android:src="@drawable/icon_product_car"
                            android:scaleType="fitXY" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="44"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_item_name"
                                style="@style/roboto_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/circular_std_bold"
                                android:maxLines="3"
                                android:paddingRight="5dp"
                                android:text="Durazno Conservero granel"
                                android:textColor="@color/color_dialog_checkout"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_text_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/circular_std_book"
                                    android:text="$1.990 / kg"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="16sp" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="33"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_remove"
                                android:layout_width="@dimen/btn_picker_width"
                                android:layout_height="@dimen/btn_picker_height"
                                android:layout_gravity="center"
                                android:background="@drawable/selector_picker_car"
                                android:fontFamily="@font/circular_std_bold"
                                android:text="-"
                                android:textColor="@color/white"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/tv_text_quantity_product"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:fontFamily="@font/circular_std_book"
                                android:gravity="center"
                                android:minHeight="40dp"
                                android:text="1"
                                android:textColor="@color/color_text_quantity"
                                android:textSize="17sp" />

                            <Button
                                android:id="@+id/btn_add"
                                android:layout_width="@dimen/btn_picker_width"
                                android:layout_height="@dimen/btn_picker_height"
                                android:layout_gravity="center"
                                android:background="@drawable/selector_picker_car"
                                android:text="+"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <RelativeLayout
                    android:layout_marginBottom="10dp"
                    android:id="@+id/rl_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <Button
                        android:id="@+id/btn_go_to_pay"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="14dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/pay_button"
                        android:drawableRight="@drawable/icon_following_item_car"
                        android:fontFamily="@font/circular_std_book"
                        android:paddingBottom="10dp"
                        android:paddingEnd="14dp"
                        android:paddingStart="14dp"
                        android:paddingTop="10dp"
                        android:text="@string/btn_go_to_pay"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:id="@+id/relativeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp">

                        <TextView
                            android:id="@+id/tv_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/circular_std_book"
                            android:gravity="center"
                            android:text="@string/tv_total"
                            android:textColor="@color/white"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/tv_price_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_total"
                            android:fontFamily="@font/circular_std_bold"
                            android:gravity="center"
                            android:text="12,234"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                    </RelativeLayout>

                </RelativeLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_list"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/circular_std_book"
                    android:layout_marginBottom="10dp"
                    android:layout_centerInParent="true"
                    android:layout_above="@+id/rl_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_list_scanner"/>

                <LinearLayout
                    android:id="@+id/ly_ic_slide"
                    android:layout_marginBottom="30dp"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/ic_slide_1"
                        android:layout_marginBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_shoppin_list_slide"/>

                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/ic_slide_2"
                        android:alpha="0.5"
                        android:layout_marginBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_shoppin_list_slide"/>

                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/ic_slide_3"
                        android:alpha="0.2"
                        android:layout_marginBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_shoppin_list_slide"/>

                </LinearLayout>

            </RelativeLayout>

            <EditText
                android:id="@+id/edt_add_code_manually"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginTop="37dp"
                android:background="@drawable/button_active_scan"
                android:gravity="center"
                android:hint="@string/btn_add_product_manually"
                android:imeActionLabel="Buscar"
                android:imeOptions="actionSend"
                android:inputType="number"
                android:maxLength="13"
                android:paddingBottom="9dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="9dp"
                android:text=""
                android:textColor="@color/colorPrimarytext"
                android:textColorHint="@color/white"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/rl_tooltip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/ic_tooltip_30"
                android:padding="30dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recuerda que puedes llevar hasta 30 unid." />

            </RelativeLayout>

            <include
                android:id="@+id/ly_store_not_available"
                layout="@layout/store_not_scan_and_go"
                android:visibility="gone" />


        </FrameLayout>

        <!-- SLIDING LAYOUT -->
        <include
            android:id="@+id/ly_swipe"
            layout="@layout/sliding_up_shopping_list" />

    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

</layout>