<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cvBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="12.9dp"
        android:animateLayoutChanges="true"
        app:cardElevation="6dp">

        <FrameLayout
            android:id="@+id/cardBase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mastercard_background"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_tarjeta_desde_atras"
                android:visibility="invisible" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:background="?attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvNumberSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:text="1645"
                        android:textColor="@color/coloIcons"
                        android:textSize="21sp" />

                    <ImageView
                        android:id="@+id/ivType"
                        android:layout_width="130dp"
                        android:layout_height="55dp"
                        android:layout_gravity="right|center"
                        android:adjustViewBounds="true"
                        android:cropToPadding="false"
                        android:maxHeight="50dp"
                        android:maxWidth="115dp"
                        android:scaleType="fitEnd"
                        app:srcCompat="@drawable/logo_visa_grande" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="28dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/source_sans_pro"
                        android:gravity="center"
                        android:text="****  ****  ****  ****  1645"
                        android:textAlignment="center"
                        android:textColor="@color/coloIcons"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/tvCardHolder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/source_sans_pro"
                        android:text="Jhonny Barrios"
                        android:textColor="@color/coloIcons"
                        android:textSize="22sp" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/ivDefault"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_seleccion_tarjeta"
                    android:layout_gravity="bottom|right"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/flSelectionDone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="#cc009641">
                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/ic_seleccion_tarjeta"
                    android:layout_gravity="center"/>
            </FrameLayout>

        </FrameLayout>
    </android.support.v7.widget.CardView>
</layout>
