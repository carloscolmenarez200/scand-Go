<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/orange_pressed"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="230dp"
                    android:background="@drawable/background_cards"
                    app:layout_collapseMode="parallax">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/pager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <android.support.design.widget.TabLayout
                        android:id="@+id/tabDots"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        app:tabBackground="@drawable/tab_selector_cards"
                        app:tabGravity="center"
                        app:tabIndicatorHeight="0dp" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="@android:style/Widget.DeviceDefault.ProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-7dp"
                        android:indeterminate="true" />

                    <LinearLayout
                        android:id="@+id/ll_checkout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="17dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/img_add_payment_method"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/img_add_payment_method" />

                        <TextView
                            android:id="@+id/tv_add_payment_method"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/circular_std_book"
                            android:text="@string/tv_text_add_payment_method"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_payment_method"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="18dp"
                            android:layout_marginEnd="18dp"
                            android:gravity="center"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/circular_std_book"
                            android:text="@string/tv_text_add_card_credit"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>
                </FrameLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/appbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                    <ImageView
                        android:id="@+id/ivBack"
                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginRight="8dp"
                        android:adjustViewBounds="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingBottom="8dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="16dp"
                        android:paddingTop="8dp"
                        android:src="@drawable/ic_back_white" />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="30dp"
                        android:fontFamily="@font/circular_std_book"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Pagar"
                        android:textColor="@color/white"
                        android:textSize="19sp" />

                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:scrollbars="vertical"
            android:nestedScrollingEnabled="true"
            android:id="@+id/fl_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_subtotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/circular_std_book"
                            android:text="@string/tv_text_subtotal"
                            android:textColor="@color/color_text_checkout"
                            android:textSize="@dimen/text_items"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_price_subtotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/circular_std_book"
                            android:text=""
                            android:textColor="@color/color_text_checkout"
                            android:textSize="@dimen/text_items"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp">

                        <TextView
                            android:id="@+id/tv_text_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/circular_std_book"
                            android:text="@string/tv_text_discount"
                            android:textColor="@color/color_text_checkout"
                            android:textSize="@dimen/text_items"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_price_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/circular_std_book"
                            android:text=""
                            android:textColor="@color/color_text_checkout"
                            android:textSize="@dimen/text_items"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp">

                        <TextView
                            android:id="@+id/tv_text_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/circular_std_book"
                            android:text="@string/tv_text_total_checkout"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_items"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_price_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/circular_std_book"
                            android:text=""
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text_items"
                            android:textStyle="bold"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_product_scanned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/circular_std_book"
                        android:paddingTop="5dp"
                        android:text=""
                        android:textColor="@color/colorDivider"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="80dp"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_gradient"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/fl_recycler"
            android:layout_gravity="center|bottom"
            android:alpha="0.9"
            android:background="@drawable/gradient_opacity" />

        <Button
            android:id="@+id/btn_checkout"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shape_button_checkout"
            android:fontFamily="@font/circular_std_book"
            android:text="@string/text_button_checkout"
            android:textColor="@color/white"
            android:textSize="@dimen/text_items"
            style="?android:attr/borderlessButtonStyle"/>

        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.design.widget.CoordinatorLayout>


</layout>