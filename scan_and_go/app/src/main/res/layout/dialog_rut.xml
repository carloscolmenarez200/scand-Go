<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_first_checkout">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_first_checkout"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        android:paddingTop="40dp">

        <ImageView
            android:id="@+id/iv_cvv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/ic_rut" />


        <TextView
            android:id="@+id/tv_cvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/circular_std_book"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:gravity="center"
            android:text="@string/text_rut"
            android:textColor="@color/colorDivider"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/text_input_rut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/circular_std_book"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:theme="@style/RutDialog"
            android:hint="Rut"
            android:inputType="text" />
        <EditText
            android:id="@+id/text_input_firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/circular_std_book"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:theme="@style/RutDialog"
            android:hint="Nombre"
            android:inputType="textCapSentences" />

        <EditText
            android:id="@+id/text_input_lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/circular_std_book"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:theme="@style/RutDialog"
            android:hint="Apellido"
            android:inputType="textCapSentences" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_button_checkout"
            android:fontFamily="@font/circular_std_book"
            android:text="Guardar"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </LinearLayout>
</RelativeLayout>
</layout>