<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:weightSum="100">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center|top"
            android:layout_weight="72"
            card_view:cardCornerRadius="15dp">

            <RelativeLayout
                android:id="@+id/rl_background_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/onborarding_purple" />

            <ImageView
                android:id="@+id/iv_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/icon_scanner"
                android:visibility="gone" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/giv_card"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:background="@drawable/gif_card" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="13"
            android:fontFamily="@font/circular_std_book"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/tv_hint_3"
            android:textColor="@color/color_text_onBoarding"
            android:textSize="15sp"
            android:typeface="sans" />

    </LinearLayout>

</layout>