<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_car"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_item_car"
        android:layout_marginBottom="@dimen/marginTop_item_car"
        android:layout_marginLeft="@dimen/margin_item_car"
        android:layout_marginRight="@dimen/margin_item_car"
        android:clickable="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">

            <ImageView
                android:id="@+id/iv_item_image"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="21"
                android:src="@drawable/icon_product_car"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="44"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_name"
                    style="@style/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/circular_std_bold"
                    android:maxLines="3"
                    android:paddingRight="5dp"
                    android:text="Durazno Conserverom granel"
                    android:textColor="@color/color_dialog_checkout"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_text_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/circular_std_book"
                        android:text="$1.990 / kg"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_remove"
                    android:layout_width="@dimen/btn_picker_width"
                    android:layout_height="@dimen/btn_picker_height"
                    android:layout_gravity="center"
                    android:background="@drawable/selector_picker_car"
                    android:fontFamily="@font/circular_std_bold"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tv_text_quantity_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/circular_std_book"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:textColor="@color/color_text_quantity"
                    android:text=""
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="@dimen/btn_picker_width"
                    android:layout_height="@dimen/btn_picker_height"
                    android:layout_gravity="center"
                    android:background="@drawable/selector_picker_car"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>